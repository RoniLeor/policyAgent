# policyAgent Environment Configuration

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (alternative)
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# OCR Configuration
# =============================================================================

# Use GPU for OCR inference (requires onnxruntime-gpu)
OCR_USE_GPU=false

# Model names (from models/ directory)
OCR_DET_MODEL=PP-OCRv5_server_det_infer.onnx
OCR_REC_MODEL=PP-OCRv5_server_rec_infer.onnx

# =============================================================================
# PDF Configuration
# =============================================================================

# DPI for PDF to image conversion
PDF_DPI=300

# =============================================================================
# SQL Configuration
# =============================================================================

# Maximum retry attempts for SQL generation
SQL_MAX_RETRIES=3

# =============================================================================
# Web Search Configuration
# =============================================================================

# Maximum search results to fetch
WEBSEARCH_MAX_RESULTS=5

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
